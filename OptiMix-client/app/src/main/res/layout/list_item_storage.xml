<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/raw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Sirovina"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/raw_ux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/activity_margin"
            android:text="ux"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/raw_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_gravity="right"
            android:text="kol"
            android:textColor="#000000" />

    </TableRow>

    <TableRow android:layout_marginLeft="@dimen/activity_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Voda"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/raw_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:textColor="#000000" />
    </TableRow>

    <TableRow android:layout_marginLeft="@dimen/activity_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Mast"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/raw_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:textColor="#000000" />
    </TableRow>

    <TableRow android:layout_marginLeft="@dimen/activity_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Proteini"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/raw_proteins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="right"
            android:textColor="#000000" />
    </TableRow>

</TableLayout>